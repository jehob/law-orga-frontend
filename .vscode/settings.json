{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "eslint.options": {
    "extensions": [".ts", ".js"],
    "parserOptions": {
      "project": ["tsconfig.eslint.json"],
      "sourceType": "module"
    }
  },
  "eslint.format.enable": true,
  "eslint.validate": ["javascript", "typescript"],
  "eslint.debug": true
}
